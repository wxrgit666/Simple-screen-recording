<Page
    x:Class="SimpleRecorder.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SimpleRecorder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SimpleRecorder.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    SizeChanged="Page_SizeChanged"
    mc:Ignorable="d">

    <Page.Resources>
        <local:InvertBoolConverter x:Key="InvertBoolConv" />
        
        <!-- 清新浅色主题 -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF2563EB"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#FF60A5FA"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFEA580C"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF059669"/>
        <SolidColorBrush x:Key="SoftGrayBrush" Color="#FFF8FAFC"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#FFF1F5F9"/>
        
        <!-- 会员卡片样式 -->
        <Style x:Key="MembershipCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- 阴影效果 -->
        <Style x:Key="ShadowCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SoftGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid
            x:Name="TopBar"
            Grid.Row="0"
            Height="48"
            Background="{StaticResource PrimaryBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
            
            <StackPanel
                x:Name="UserLayout"
                Grid.Column="1"
                Background="Transparent"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <FontIcon
                    FontSize="24"
                    Margin="20,0,12,0"
                    Glyph="&#xE714;"
                    Foreground="White" />
                <TextBlock
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="极简录屏" />
            </StackPanel>
            
            <!-- 操作按钮 -->
            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0,0,20,0">
                <Button
                    x:Name="OverlayButton"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Click="OverlayButton_Click">
                    <FontIcon
                        FontSize="16"
                        Glyph="&#xE740;"
                        Foreground="White" />
                </Button>
            </StackPanel>
        </Grid>

        <!-- 会员功能区 (隐藏) -->
        <Border
            Grid.Row="1"
            x:Name="MembershipSection"
            Visibility="Collapsed">
        </Border>

        <!-- 录制控制区 -->
        <Border
            Grid.Row="2"
            Style="{StaticResource ShadowCardStyle}"
            Margin="16,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 主录制按钮 -->
                <Button
                    x:Name="RecordButton"
                    Grid.Row="0"
                    Height="70"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    CornerRadius="16"
                    Click="OnRecordButtonClick">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF2563EB" Offset="0"/>
                            <GradientStop Color="#FF1D4ED8" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <Border
                            Width="40"
                            Height="40"
                            Background="White"
                            CornerRadius="20">
                            <FontIcon
                                x:Name="StopRecIcon"
                                FontSize="20"
                                Foreground="{StaticResource PrimaryBrush}"
                                Glyph="&#xE714;" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                x:Name="RecordName"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="开始录制" />
                            <TextBlock
                                FontSize="12"
                                Foreground="White"
                                Opacity="0.8"
                                Text="点击选择录制区域" />
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- 录制选项 -->
                <StackPanel
                    x:Name="RecordingMiniOptions"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="12">
                    
                    <ComboBox
                        x:Name="ResolutionComboBox"
                        MinWidth="120"
                        Header="分辨率"
                        Background="Transparent"
                        SelectionChanged="ResolutionComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:ResolutionItem">
                                <TextBlock Text="{x:Bind DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <ComboBox
                        x:Name="FrameRateComboBox"
                        MinWidth="100"
                        Header="帧率"
                        Background="Transparent"
                        SelectionChanged="FrameRateComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:FrameRateItem">
                                <TextBlock Text="{x:Bind DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox
                        x:Name="BitrateComboBox"
                        MinWidth="100"
                        Header="质量"
                        Background="Transparent"
                        SelectionChanged="BitrateComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:BitrateItem">
                                <TextBlock Text="{x:Bind DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- 录制状态 -->
                <Grid
                    x:Name="RecordingContainer"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Visibility="Collapsed">
                    <StackPanel
                        x:Name="RecordingNotification"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16">
                        <Border
                            Width="80"
                            Height="80"
                            Background="{StaticResource AccentBrush}"
                            CornerRadius="40">
                            <FontIcon
                                x:Name="Ellipse"
                                FontSize="32"
                                Foreground="White"
                                Glyph="&#xE15B;" />
                        </Border>
                        <TextBlock
                            FontSize="24"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Text="正在录制中..." />
                        <TextBlock
                            FontSize="14"
                            Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                            HorizontalAlignment="Center"
                            Text="点击停止录制" />
                    </StackPanel>

                    <StackPanel
                        x:Name="ProcessingNotification"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Spacing="16">
                        <muxc:ProgressRing
                            Width="60"
                            Height="60"
                            IsActive="True" />
                        <TextBlock
                            x:Name="SaveTextBlock"
                            FontSize="18"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Text="正在保存视频..." />
                        <muxc:ProgressBar
                            x:Name="MergingProgressRing"
                            Width="200"
                            Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 视频库 -->
        <Grid
            x:Name="MainContent"
            Grid.Row="3"
            Margin="16,8,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 视频库标题 -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="我的视频" />
                <Button
                    x:Name="SettingsButton"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="SettingsButton_Click">
                    <FontIcon
                        FontSize="18"
                        Glyph="&#xE713;" />
                </Button>
            </Grid>
            
            <!-- 视频内容 -->
            <Border
                Grid.Row="1"
                Background="White"
                CornerRadius="16"
                Padding="20"
                BorderBrush="{StaticResource LightGrayBrush}"
                BorderThickness="1">
                <Grid>
                    <StackPanel
                        x:Name="NoVideosContainer"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16">
                        <FontIcon
                            FontSize="48"
                            Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                            Glyph="&#xE8B1;" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="还没有录制视频" />
                        <TextBlock
                            FontSize="14"
                            Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                            Text="开始你的第一次录制吧" />
                    </StackPanel>

                    <ScrollViewer>
                        <GridView
                            x:Name="BasicGridView"
                            Padding="0"
                            RightTapped="BasicGridView_RightTapped"
                            SelectionMode="Single">
                            <GridView.Resources>
                                <MenuFlyout x:Name="BasicGridFlyout">
                                    <MenuFlyoutItem Click="MenuFlyoutItem_Click" Text="删除">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE74D;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Click="MenuFlyoutItem_Click_1" Text="分享">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE72D;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Click="MenuFlyoutItem_Click_2" Text="详情">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE946;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Click="MenuFlyoutItem_Click_3" Text="打开文件夹">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE8DA;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </GridView.Resources>
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="models:ThumbItem">
                                    <Border
                                        Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="8">
                                        <StackPanel Spacing="8">
                                            <Border CornerRadius="6">
                                                <Image
                                                    Width="180"
                                                    Height="120"
                                                    RightTapped="Image_RightTapped"
                                                    Source="{x:Bind img}"
                                                    Stretch="UniformToFill"
                                                    Tapped="Image_Tapped" />
                                            </Border>
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind fileN}"
                                                TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <Frame
            x:Name="PreviewFrame"
            Grid.Row="3"
            x:FieldModifier="public" />
    </Grid>
</Page>